{
  "enabled": {
    "description": "Enable streamify proxy",
    "type": "bool",
    "default": true
  },
  "debug": {
    "description": "Enable debug logging",
    "type": "bool",
    "default": false,
    "hint": "Log method, path, target and latency for each handled request"
  },
  "port": {
    "description": "Local listen port",
    "type": "int",
    "default": 23456,
    "hint": "Local port used by the proxy server"
  },
  "request_timeout": {
    "description": "Upstream request timeout (seconds)",
    "type": "float",
    "default": 120.0,
    "hint": "Global connect/read timeout to avoid permanently hung upstream connections"
  },
  "providers": {
    "type": "template_list",
    "description": "Provider route list",
    "templates": {
      "provider": {
        "name": "Provider",
        "hint": "Set AstrBot provider base_url to http://localhost:<port>/<route_name>",
        "items": {
          "route_name": {
            "description": "Route name",
            "type": "string",
            "hint": "Used in local path: /<route_name>"
          },
          "target_url": {
            "description": "Upstream API base URL",
            "type": "string",
            "default": "https://api.openai.com",
            "hint": "Only base URL is needed; endpoint path is auto matched"
          },
          "forward_url": {
            "description": "Generated local forward URL",
            "type": "string",
            "default": "",
            "hint": "Auto-generated from port + route_name"
          },
          "proxy_url": {
            "description": "HTTP proxy URL (optional)",
            "type": "string",
            "default": "",
            "hint": "For example: http://127.0.0.1:7890"
          }
        }
      }
    }
  }
}
